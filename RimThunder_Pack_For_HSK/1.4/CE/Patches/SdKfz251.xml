	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="RT_SdKfz251_Vehicle"]/components/li[key="LeftRoadWheels" or key="RightRoadWheels"]/health</xpath>
