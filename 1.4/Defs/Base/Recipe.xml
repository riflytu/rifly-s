      </filter>
      <count>40</count>
    </li>
    <li>
      <filter>
        <thingDefs>
          <li>AdvMechanism</li>
        </thingDefs>
      </filter>
      <count>20</count>
    </li>
    <li>
      <filter>
        <categories>
          <li>SLDBar</li>
        </categories>
